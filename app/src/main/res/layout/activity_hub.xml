<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Hub">

    <Button
        android:id="@+id/creacion"
        android:layout_width="195dp"
        android:layout_height="57dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="108dp"
        android:layout_marginRight="108dp"
        android:onClick="creacion"
        android:text="Crear Personaje"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ver"
        android:layout_width="192dp"
        android:layout_height="43dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="108dp"
        android:layout_marginRight="108dp"
        android:text="Ver Personajes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/creacion" />

    <Button
        android:id="@+id/info"
        android:layout_width="196dp"
        android:layout_height="50dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="104dp"
        android:layout_marginRight="104dp"
        android:onClick="informacion"
        android:text="Informacion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ver" />
</androidx.constraintlayout.widget.ConstraintLayout>